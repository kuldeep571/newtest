<form action="/update?updateid=<%= data.id;%>" method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="mt-4 col-md-6 offest-3">
                <div class="card">
                    <div class="card-header">
                        <h1 class="text text-center">Edit product</h1>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" class="form-control" name="title" value="<%= data.title;%>">
                        </div>
                        <div class="form-group">
                            <label>Price</label>
                            <input type="text" class="form-control" name="price" value="<%= data.price;%>">
                        </div>

                        <div class="form-group">
                            <label>Quintity</label>
                            <input type="text" class="form-control" name="quantity" value="<%= data.quantity;%>">
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <textarea name="description" class="form-control" ><%= data.description;%></textarea>
                        </div>
                        <div class="form-group">
                            <label>Profile</label>
                            <input type="file" class="form-control" name="profile" value="<%= data.profile%>">
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary" type="submit">update</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>