<div class="container">
    <div class="row">
        <div class="col-md-10 offset-1">
            <table class="table table-borderd table-hover table-dark table-striped">
                <h1 class="table_head">All userlist</h1>
                <thead>
                    <tr>
                        <th>S.no</th>
                        <th>fullname</th>
                        <th>email</th>
                        <th>contact</th>
                        <th>EDIT/DELETE</th>
                    </tr>
                </thead>
                <tbody>
                    <%for(let i=0; i < user.length; i++){%>
                    <tr>
                        <td><%= i+1;%></td>
                        <td>
                            <%= user[i].firstname+" "+ user[i].lastname;%>
                        </td>
                        <td>
                            <%= user[i].email;%>
                        </td>
                        <td>
                            <%= user[i].contact;%>
                        </td>
                        <td>
                            <a href="/edituser?editid=<%= user[i].id;%>" class="btn btn-primary">Edit</a>
                            <a href="/deleteuser?deleteid=<%= user[i].id;%>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    <%}%>
                </tbody>
            </table>
        </div>
    </div>
</div>

